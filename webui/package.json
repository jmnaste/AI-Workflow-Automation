{
  "name": "flovify-webui-workspace",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "ui",
    "bff"
  ],
  "scripts": {
    "dev:ui": "npm run dev --workspace=ui",
    "dev:bff": "npm run dev --workspace=bff",
    "build:ui": "npm run build --workspace=ui",
    "build:bff": "npm run build --workspace=bff",
    "build": "npm run build:ui && npm run build:bff",
    "typecheck": "npm run typecheck --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "typescript": "^5.6.3"
  }
}
